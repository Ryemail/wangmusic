/* pages/recommendSong/recommendSong.wxss */

.title {
  overflow: hidden;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 180rx;
  font-size: 34rpx;
  margin-bottom: 34rpx;
}

.title text {
  margin-left: 20rpx;
}

.title::before {
  content: "";
  display: blockl;
  position: absolute;
  top: 3rpx;
  left: 0;
  height: 34rpx;
  width: 6rpx;
  background: #d43c33;
}

.song_list {
  margin-bottom: 70rpx;
}

/* 推荐歌单 */

.grids_wrap {
  overflow: hidden;
  width: 100%;
   /* display: -webkit-box; */
}

.grids_item {
  overflow: hidden;
  position: relative;
  float: left;
  width: 33.3%;
  padding: 0 1px;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}

.grids_item .img, .grids_item .img image {
  display: block;
  width: 100%;
}

.grids_item:first-child, .grids_item:nth-child(4) {
  padding-left: 0;
  padding-right: 2px;
}

.grids_item:last-child, .grids_item:nth-child(3) {
  padding-left: 2px;
  padding-right: 0;
}
.title_n{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  height: 40rpx;
  padding: 0 10rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #fff;
  background-image: -webkit-linear-gradient(180deg,rgba(0,0,0,.2),transparent);
  background-image: linear-gradient(180deg,rgba(0,0,0,.2),transparent);
  text-align: right;
}
.song_label {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 10rpx 10rpx 0;
  text-align: left;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
